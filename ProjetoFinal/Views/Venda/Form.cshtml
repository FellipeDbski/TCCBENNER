<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <h3 class="page-header"><i class="icon_plus_alt"></i> Nova Venda</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <section class="panel">
                    <div class="panel-body">
                        <form class="form-horizontal" method="post" action="/Venda/NovaVenda">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="vendedores">Vendedor</label>
                                <div class="col-lg-2">
                                    <select class="form-control input-sm m-bot15" id="vendedores" name="venda.VendedorID">
                                        @foreach (var vendedor in ViewBag.Vendedores)
                                        {
                                            <option value="@vendedor.ID">@vendedor.Nome</option>
                                        }
                                    </select>
                                </div>
                                <label class="col-sm-3 control-label" for="formasPagamento">Opções de Pagamento</label>
                                <div class="col-lg-2">
                                    <select class="form-control input-sm m-bot15" id="formasPagamento" name="venda.FormaDePagamentoID">
                                        @foreach (var opcoes in ViewBag.FormasPagamento)
                                        {
                                            <option value="@opcoes.ID">@opcoes.Nome</option>
                                        }
                                    </select>
                                </div>
                            </div>       
                            
                            <div class="form-group">
                                <label class="control-label col-lg-2" for="clientes">Cliente</label>
                                <div class="col-lg-10">
                                    <div class="row">
                                        <div class="col-lg-2">
                                            <input type="text" class="form-control" placeholder="ID" id="clientes" name="venda.ClienteID">
                                        </div>
                                        <div class="col-lg-4">
                                            <input type="text" class="form-control" placeholder="Nome" id="clienteID" name="cliente.Nome" disabled>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="produtos">Lista de produtos</label>
                                <div class="col-sm-4">
                                     <select multiple class="form-control" id="produtos" name="venda.Produtos">
                                         
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Codigo do Produto</label>
                                <div class="col-sm-2">
                                    <input type="text" class="form-control" id="produtoId" value="" />
                                    
                                </div>

                                <label class="col-sm-1 control-label">Quantidade</label>
                                <div class="col-sm-1">                            
                                    <input type="text" class="form-control" id="qtdProduto">
                                </div>
                                <div class="col-lg-4">
                                    <button title="Adicione o produto na lista" data-placement="right" data-toggle="tooltip" class="btn btn-default tooltips" type="button" id="btnAddProd"><i class="icon_plus"></i></button>
                                </div>

                                <!--Mostra o valor total da compra-->
                                <label class="control-label col-lg-2" for="clientes">TOTAL R$</label>
                                <div class="col-lg-2">
                                    <input type="text" class="form-control" placeholder="0.0" id="totalP" disabled>
                                </div>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary">Salvar venda</button>
                                <button class="btn btn-danger">Cancelar</button>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
<script type="text/javascript" src="~/Content/js/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="~/Content/js/addProdutoLista.js"></script>


