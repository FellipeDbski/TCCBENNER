@model ProjetoFinal.Models.Produtos
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <h3 class="page-header">Lista de Produtos</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <section class="panel">
                    <div class="table-responsive">
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Produto</th>
                                        <th>Tamanho</th>
                                        <th>Marca</th>
                                        <th>estoque</th>
                                        <th>Categoria</th>
                                        <th>Valor</th>
                                        <th>Descrição</th>
                                        <th>Alterar/Deletar</th>  
                                    </tr>
                                </thead>
                            <tbody>
                                @foreach (var produto in ViewBag.Produtos)
                                {
                             <tr>
                                <td class="esseID">@produto.ID</td>
                                <td>@produto.Nome</td>
                                <td>@produto.Tamanho</td>
                                <td>@produto.Marca</td>
                                <td>@produto.Quantidade</td>
                                <td>@produto.Categoria.Nome</td>
                                <td>@produto.Valor</td>
                                <td>
                                     <button class="btn btn-default modalProdutoBusca" type="button" href="#" data-toggle="modal" data-target="#modalDescricao"><i class="fa fa-search-plus"></i></button>
                                </td>
                                <td>
                                    <a class="btn btn-default alteraProduto" href="/Produtos/Editar/@produto.ID"><i class="fa fa-pencil"></i></a>
                                    <a class="btn btn-danger" href="#"><i class="fa fa-trash-o btnRemove"></i></a>
                                </td>
                             </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

<!--Modal-->
<div class="modal fade" id="modalDescricao" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Lista de Produtos Comprados</h5>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <p id="produtosDescricao" name="produtos.Descricao"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btnFecha" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!--Modal-->