<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <h3 class="page-header"><i class="fa fa-user"></i>Clientes</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <section class="panel">
                    <div class="table-responsive">
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nome Completo</th>
                                    <th>CPF</th>
                                    <th>Idade</th>
                                    <th>Telefone</th>
                                    <th>Genero</th>
                                    <th>Cidade</th>
                                    <th>Bairro</th>
                                    <th>Rua</th>
                                    <th>Editar/Remover</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var cliente in ViewBag.Clientes)
                                {
                                    <tr>
                                        <td class="esseID">@cliente.ID</td>
                                        <td>@cliente.Nome</td>
                                        <td>@cliente.CPF</td>
                                        <td>@cliente.Idade</td>
                                        <td>@cliente.Telefone</td>
                                        <td>@cliente.Genero</td>
                                        <td>@cliente.Cidade</td>
                                        <td>@cliente.Bairro</td>
                                        <td>@cliente.Rua</td> 
                                        <td> 
                                            <a class="btn btn-default" href="/Clientes/Editar/@cliente.ID"><i class="fa fa-pencil"></i></a>  
                                            <a class="btn btn-danger" href="#"><i class="fa fa-trash-o btnRemoveCliente"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

